{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Lernmanager Task Definition",
  "description": "Schema for importing tasks into Lernmanager",
  "type": "object",
  "required": ["task"],
  "properties": {
    "task": {
      "type": "object",
      "required": ["name", "beschreibung", "fach", "stufe"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Task title (Aufgabenname)"
        },
        "beschreibung": {
          "type": "string",
          "description": "Task description"
        },
        "lernziel": {
          "type": "string",
          "description": "Learning objective (optional)"
        },
        "fach": {
          "type": "string",
          "enum": ["Englisch", "Chemie", "MBI", "Geographie"],
          "description": "Subject"
        },
        "stufe": {
          "type": "string",
          "enum": ["5/6", "7/8", "9/10", "11s", "11/12"],
          "description": "Grade level"
        },
        "kategorie": {
          "type": "string",
          "enum": ["pflicht", "bonus"],
          "default": "pflicht",
          "description": "Category: pflicht (required) or bonus"
        },
        "voraussetzungen": {
          "type": "array",
          "description": "List of prerequisite task names (must be imported first)",
          "items": {
            "type": "string"
          }
        },
        "subtasks": {
          "type": "array",
          "description": "List of subtasks (Teilaufgaben)",
          "items": {
            "type": "object",
            "required": ["beschreibung"],
            "properties": {
              "beschreibung": {
                "type": "string",
                "description": "Subtask description"
              },
              "reihenfolge": {
                "type": "integer",
                "description": "Order (auto-assigned if not provided)"
              }
            }
          }
        },
        "materials": {
          "type": "array",
          "description": "List of materials (links or files)",
          "items": {
            "type": "object",
            "required": ["typ", "pfad"],
            "properties": {
              "typ": {
                "type": "string",
                "enum": ["link", "datei"],
                "description": "Material type"
              },
              "pfad": {
                "type": "string",
                "description": "URL or file path"
              },
              "beschreibung": {
                "type": "string",
                "description": "Material description (optional)"
              }
            }
          }
        },
        "quiz": {
          "type": "object",
          "description": "Quiz questions (optional)",
          "properties": {
            "questions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["text", "options", "correct"],
                "properties": {
                  "text": {
                    "type": "string",
                    "description": "Question text"
                  },
                  "options": {
                    "type": "array",
                    "items": {"type": "string"},
                    "minItems": 2,
                    "description": "Answer options"
                  },
                  "correct": {
                    "type": "array",
                    "items": {"type": "integer"},
                    "minItems": 1,
                    "description": "Indices of correct answers (0-based)"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
